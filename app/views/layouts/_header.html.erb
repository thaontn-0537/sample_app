<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.logo"), root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("layouts.header.nav.home"), static_pages_home_path %></li>
          <li><%= link_to t("layouts.header.nav.help"), static_pages_help_path %></li>
          <% if logged_in? %>
            <li><%= link_to t(".nav.users"), users_path %></li>
            <li class="dropdown" >
              <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
                <%=  t ".nav.account" %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" id="dropdown-menu">
                <li><%= link_to t(".nav.profile"), current_user %></li>
                <li><%= link_to t(".nav.settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li> <%= link_to t(".nav.log_out"), logout_path,  data: { "turbo-method": :delete } %></li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to t(".nav.log_in"), login_path %></li>
        <% end %>
        </ul>
      </nav>
  </div>
</header>
